<%= link_to shop_path,  
    data: { 
        turbo_frame: "shop-content", 
        turbo_action: "advance", 
        action: current_user&.active_cart&.total_items.to_i > 0 ? "click->submenu#toggleModal" : "click->accordion#toggle", 
        target: current_user&.active_cart&.total_items.to_i > 0 ? "cart" : "shop-content", 
        url: shop_path
    } do %>
    <%= image_tag("icons/icon_shopping_light.svg", 
        alt: "Shopping Icon", 
        class: "icon",
    ) %>
    <span class="cart-total-items"><%= current_user&.active_cart&.total_items || 0 %></span>
<% end %>

