<div class="submenu" data-controller="submenu accordion">
    <div class="submenu-container">
        <%= link_to home_path, data: { turbo_frame: "home-content", turbo_action: "advance", action: "click->accordion#toggle", url: home_path } do%>
            <%= image_tag("logo_dark_tilt.svg", 
                alt: "Your Logo", 
                class: "logo"
                ) %>
        <% end %>

        <% if current_page?(shop_path) %>
            <div class="submenu-list" data-submenu-target="list">
                <div class="submenu-item"><%= link_to "by Traders", shop_path,  data: { turbo_frame: "shop-content", turbo_action: "advance", action: "click->accordion#toggle", url: shop_path }, class: "submenu-link" %></div>
                <div class="submenu-item"><%= link_to "by Categories", shop_path,  data: { turbo_frame: "shop-content", turbo_action: "advance", action: "click->accordion#toggle", url: shop_path }, class: "submenu-link" %></div>
            </div>
            <turbo-frame id="tf-login-delivery-links">
                <%= render "shared/link_login_delivery" %>
            </turbo-frame>
        <% else %>
            <div class="submenu-list" data-submenu-target="list"></div>
        <% end %>
        
        <div class="submenu-search-shop" data-submenu-target="title">               
            <%= link_to shop_path,  data: { turbo_frame: "shop-content", turbo_action: "advance", action: "click->accordion#toggle", url: shop_path } do %>
                <%= image_tag("icons/icon_shopping.svg", 
                    alt: "Shopping Icon", 
                    class: "icon",
                ) %>
            <% end %>

            <%= link_to "#" do %>
                <%= image_tag("icons/icon_search.svg", 
                    alt: "Search Icon", 
                    class: "icon",
                ) %>
            <% end %>
        </div>
    </div>
</div>

